{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pylint",
            "type": "shell",
            "command": [
                "./venv/bin/pylint",
                "--rcfile",
                "./.github/config/pylintrc",
                "mysite/mysite"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "mypy",
            "type": "shell",
            "command": [
                "./venv/bin/mypy",
                "--config-file",
                "./.github/config/mypy.ini",
                "mysite/mysite"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}